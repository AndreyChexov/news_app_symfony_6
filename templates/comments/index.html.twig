{% extends 'base.html.twig' %}

{% block title %}Мои Комментарии{% endblock %}

{% block body %}
    <h1>Мои Комментарии</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Text</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for comment in comments %}
            {% if comment.author == user.name %}
            <tr>
                <td>{{ comment.id }}</td>
                <td>{{ comment.text }}</td>
                
                <td>
                    <a href="{{ path('app_comments_edit', {'id': comment.id}) }}">Редактировать</a>
                </td>
            </tr>
        {% endif %}
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
