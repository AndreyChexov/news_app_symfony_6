{% extends 'base.html.twig' %}

{% block title %}News index{% endblock %}

{% block body %}
    <h1>News index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>News_name</th>
                <th>News_text</th>
                <th>News_author</th>
                <th>News_date</th>
                <th>News_img</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for news in news %}
            <tr>
                <td>{{ news.id }}</td>
                <td>{{ news.newsName }}</td>
                <td>{{ news.newsText }}</td>
                <td>{{ news.newsAuthor }}</td>
                <td>{{ news.newsDate ? news.newsDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ news.newsImg }}</td>
                <td>
                    <a href="{{ path('app_news_show', {'id': news.id}) }}">show</a>
                    <a href="{{ path('app_news_edit', {'id': news.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_news_new') }}">Create new</a>
{% endblock %}
